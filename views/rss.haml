!!! XML
%rss{:version => "2.0", "xmlns:atom" => "http://www.w3.org/2005/Atom"}
    %channel
        %title=@movie.title
        %link= BASE_URL+"/events/#{@movie.id}"
        %description @movie.title
        <atom:link href="http://movietrail.heroku.com/events" rel="self" type="application/rss+xml" />
        - @events.each do |e|
            %item
                %title= "#{e.type} #{e.crew}"
                %link= BASE_URL+"/events/#{e.id}"
                - if e.is_actor?
                    %description= "@#{e.crew} #{e.content}"
                - else
                    %description= e.content
  